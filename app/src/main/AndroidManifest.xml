<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mathsgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme1">
        <activity android:name=".addition.levelActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".addition.level1.TryAgain1Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".addition.level2.TryAgain2Activity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".StartActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addition.level1.Hint1Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".addition.level2.Hint2Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".addition.level1.Congratulations1Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".addition.level2.Congratulations2Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".addition.level1.Addition1Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".addition.level2.Addition2Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="landscape" />

        <service
            android:name=".SoundService"
            android:enabled="true" />
    </application>

</manifest>